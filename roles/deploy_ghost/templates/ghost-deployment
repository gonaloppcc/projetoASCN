---
# Deployment of Ghost
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ghost-deployment
  namespace: {{ k8s_namespace }}
  labels:
    app: ghost
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ghost
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: ghost
    spec:
      containers:
      - name: ghost
        image: ghost:5.14.1
        env: # The variables below could be set on a ConfigMap object
        - name: database__connection__database
          value: {{ app_db_name }}
        - name: database__connection__user
          value: {{ app_db_user }}
        - name: database__connection__password
          value: {{ app_db_password }}
        - name: database__connection__host
          value: mysql-service
        ports:
          - containerPort: 2368
