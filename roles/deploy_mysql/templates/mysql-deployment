---
# Deployment for MySQL
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mysql-deployment
  namespace: {{ k8s_namespace }}
  labels:
    app: mysql
    tier: database
spec:
  selector:
    matchLabels:
      app: mysql
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: mysql
        tier: database
    spec:
      containers:
      - name: mysql
        image: mysql:latest
        env: # The variables below could be set on a ConfigMap object
        - name: MYSQL_ALLOW_EMPTY_PASSWORD
          value: "true"
        - name: MYSQL_DATABASE
          value: {{ app_db_name }}
        - name: MYSQL_USER
          value: {{ app_db_user }}
        - name: MYSQL_PASSWORD
          value: {{ app_db_password }} # Use Secret object in real usage
        ports:
        - containerPort: 3306
        volumeMounts:
        - name: pvc-mysql-storage
          mountPath: /var/lib/mysql
      volumes:
      - name: pvc-mysql-storage
        persistentVolumeClaim:
          claimName: mysql-claim
